<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akshayuprabhu.instantmusic.MainActivity"
    android:background="@drawable/backgroundimd"
    android:weightSum="1">

    <TextView
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Song,lyrics,whatever..."
            android:inputType="textNoSuggestions"

            android:id="@+id/songnameET"
            style="@android:style/Widget.AutoCompleteTextView"
            android:selectAllOnFocus="false"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null"/>

        <Button
            android:text="Download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchb"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/songnameET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/llmain">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lla" />



        </ScrollView>
    </LinearLayout>

</LinearLayout>
